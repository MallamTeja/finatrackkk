 {
  "name": "fintrack-frontend",
  "version": "1.0.0",
  "description": "Frontend server for FinTrack - Personal Finance Manager",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest tests/auth.test.js",
    "test:watch": "jest tests/auth.test.js --watch",
    "test:ci": "jest tests/auth.test.js --ci --runInBand",
    "build:css": "tailwindcss -i ./src/input.css -o ./public/css/tailwind.css",
    "watch:css": "tailwindcss -i ./src/input.css -o ./public/css/tailwind.css --watch",
    "dev:full": "npm run watch:css & npm run dev"
  },
  "dependencies": {
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.3",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^2.0.22",
    "puppeteer": "^24.6.1"
  }
}
